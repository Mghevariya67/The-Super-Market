@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @model TheIndianSuperMarket.Models.Customers
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>The Indian SuperMarket</title>
        <link rel="stylesheet" href="~/css/login.css" />
    </head>
    <body>
        <div class="container" id="container">
        <form asp-action="Index">
                <h1>Sign in</h1>
                <div class="form-group">
                    <input asp-for="CustomerEmail" id="email" type="email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="pwd" type="password" placeholder="Password" />
                </div>

                <div>
                    <button type="submit" value="">Sign In </button> <br /><br />
                    <button asp-controller="Home" asp-action="Register">Sign Up</button>
                </div>
               
                <br />
               
            </form>
            </div>

        
        <script src="~/js/login.js"></script>
    </body>
</html>
